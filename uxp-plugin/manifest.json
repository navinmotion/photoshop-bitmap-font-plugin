{
  "id": "com.example.textatlas.generator",
  "name": "Native Text Atlas Generator",
  "version": "1.2.0",
  "main": "index.html",
  "manifestVersion": 5,
  "entryPoints": [
    {
      "type": "panel",
      "id": "com.example.textatlas.generator.panel",
      "label": "Native Text Atlas",
      "main": "index.html",
      "minimumSize": { "width": 600, "height": 500 },
      "maximumSize": { "width": 1920, "height": 1080 },
      "preferredDockedSize": { "width": 300, "height": 600 },
      "preferredFloatingSize": { "width": 900, "height": 650 },
      "icons": [
        { "width": 23, "height": 23, "path": "icons/icon.png", "scale": [1, 2] }
      ]
    }
  ],
  "host": [
    {
      "app": "PS",
      "minVersion": "23.0.0"
    }
  ],
  "requiredPermissions": {
    "localFileSystem": "fullAccess",
    "network": {
      "domains": [ "ws://localhost:4567" ]
    },
    "launchProcess": {
      "extensions": [ ".exe", ".app" ]
    }
  },
  "icons": [
    { "width": 23, "height": 23, "path": "icons/icon.png", "scale": [1, 2] }
  ]
}